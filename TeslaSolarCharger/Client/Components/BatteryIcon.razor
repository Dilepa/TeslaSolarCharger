@if (StateOfCharge != default)
{
    <svg width="60" height="30" viewBox="0 0 60 30">
        <rect x="1" y="1" width="54" height="28" rx="3" ry="3"
              style="fill:none; stroke:black; stroke-width:2" />
        <rect x="55" y="9" width="4" height="12"
              style="fill:black; stroke:black; stroke-width:1" />
        <rect x="3" y="3" width="@(50 * StateOfCharge / 100)" height="24"
              style="fill:@GetBatteryColor(StateOfCharge.Value); stroke-width:0" />
        <text x="30" y="17" text-anchor="middle" fill="black"
              style="font-size: 14px; font-weight: bold; dominant-baseline: middle;">
            @StateOfCharge%
        </text>
    </svg>
}

@code {
    [Parameter]
    public int? StateOfCharge { get; set; }

    private string GetBatteryColor(int soc)
    {
        if (soc > 60) return "green";
        if (soc > 30) return "yellow";
        return "red";
    }
}